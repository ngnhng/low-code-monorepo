{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=web...",
    "dev": "turbo dev --filter=web...",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "husky": "^9.0.11",
    "prettier": "^3.1.0",
    "react-resizable-panels": "^2.0.16",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "bpmn-js-bpmnlint": "^0.22.2",
    "bpmnlint": "^10.2.1"
  }
}
