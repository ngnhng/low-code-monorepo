{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"useDefineForClassFields": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"services/*": [
				"services/*"
			],
			"helpers/*": [
				"helpers/*"
			],
			"types/*": [
				"types/*"
			],
			"hooks/*": [
				"hooks/*"
			],
			"stores/*": [
				"stores/*"
			],
			"lib/*": [
				"lib/*"
			],
			"constants/*": [
				"constants/*"
			],
			"components/*": [
				"components/*"
			],
		}
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}