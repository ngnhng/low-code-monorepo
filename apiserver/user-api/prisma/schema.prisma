generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgres"
  url          = env("YALC_DATABASE_POSTGRES_USER_URL")
  relationMode = "prisma"
}

model User {
  id   Int    @id @default(autoincrement())
  uuid String @unique @default(uuid())

  email     String @unique
  firstName String
  lastName  String

  projects  Project[]
  workflows Workflow[]
  tables    Table[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id  Int    @id @default(autoincrement())
  pid String @unique

  title String

  views     View[]
  tables    Table[]
  workflows Workflow[]

  user   User @relation(fields: [userId], references: [id])
  userId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Workflow {
  id  Int    @id @default(autoincrement())
  wid String @unique

  title String

  user   User @relation(fields: [userId], references: [id])
  userId Int
  project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([projectId])
}

model View {
  id Int @id @default(autoincrement())

  uiData Json

  project   Project @relation(fields: [projectId], references: [id])
  projectId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
}

model Table {
  id  Int    @id @default(autoincrement())
  tid String @unique

  tableName String
  tableData Json

  user   User @relation(fields: [userId], references: [id])
  userId Int
  project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([projectId])
}

model DataIntegration {
  id Int @id @default(autoincrement())

  datasourceType String
  datasourceMetadata Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
